{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "banner": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "price": {
      "type": "decimal"
    },
    "description": {
      "type": "text"
    },
    "weight": {
      "type": "decimal"
    },
    "order_lines": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-line.order-line",
      "mappedBy": "product"
    },
    "productSection": {
      "type": "component",
      "component": "common.product-section",
      "repeatable": true
    }
  }
}
